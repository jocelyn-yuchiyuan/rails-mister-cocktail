
<div class="banner" style="background:#D6EAED">

    <h2><%= @cocktail.name %></h1>


</div>


<div class="container">

    <%= cl_image_tag @cocktail.image.key, height: 300, width: 400, crop: :fill %>

            <h5>Ingredient</h5>

            <% @cocktail.doses.each do |dose| %>

              <p><%= dose.ingredient.name%></p>
              <p><%= dose.description%></p>

              <%=link_to dose_path(dose), method: :delete,data: { confirm: "Are you sure?" },class:"btn  btn-rimary" do%>
              🗑
               <% end %>
            <% end %>

    <%=link_to cocktail_path(@cocktail), method: :delete,data: { confirm: "Are you sure?" } ,class:"btn  btn-primary" do%>
    delete cocktail
    <%end %>
    <%= link_to  cocktails_path,class:"btn btn-primary" do %>
     ⏎
    <%end %>
    <%= link_to new_cocktail_dose_path(@cocktail) ,class:"btn  btn-primary" do %>
    Add description
    <%end %>

</div>

